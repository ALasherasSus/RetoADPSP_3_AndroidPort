<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Municipio">

    <ListView
        android:id="@+id/list"
        android:layout_width="357dp"
        android:layout_height="344dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="353dp"
        android:layout_height="146dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button3"
                android:layout_width="155dp"
                android:layout_height="48dp"
                android:onClick="Estacion"
                android:text="Estaciones" />

            <Button
                android:id="@+id/btnProvincia"
                android:layout_width="158dp"
                android:layout_height="50dp"
                android:onClick="Pueblo"
                android:text="Pueblo" />
        </TableRow>

        <TableRow
            android:layout_width="332dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnPueblo"
                android:layout_width="150dp"
                android:layout_height="47dp"
                android:onClick="Provincia"
                android:text="Provincia" />

            <Button
                android:id="@+id/button4"
                android:layout_width="190dp"
                android:layout_height="54dp"
                android:onClick="Espacio"
                android:text="Espacios Naturales" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>